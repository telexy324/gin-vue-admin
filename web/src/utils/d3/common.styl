.common {
    width 100vw
    height 100vh
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    -webkit-touch-callout none
    -moz-touch-callout none
    -ms-touch-callout none
    touch-callout none
    -webkit-tap-highlight-color rgba(0,0,0,0)
    -webkit-tap-highlight-color transparent

    .toolbar-mobile {
        position fixed
        font-size 14px
        color #666666
        z-index 20
        background #fff
        cursor pointer
        border .5px solid #ccc
        font-size 20px
        border-radius 4px
        height 52px
        box-shadow 0 0 4px 0 rgba(0, 0, 0, .2)

        ul {
            height 52px
            display flex
            justify-content center
            align-items center
            padding 0 14px
            li {
                display flex
                flex-direction column
                align-items center
                list-style none

                &:nth-child(2n) {
                    margin 0 14px
                    height 24px
                    width .5px
                    background #ccc
                }

                img {
                    width 24px
                    height 24px
                }

                span {
                    font-size 10px
                    color #515f68
                    font-weight 300
                }
            }
        }

        &.rotate-x {
            right 20px
            bottom 20px
        }

        &.rotate-y {
            right 0
            bottom 0
            transform rotate(-90deg)
            transform-origin 0 0
        }
    }

    .toolbar-pc {
        position fixed
        width 24px
        right 6px
        bottom 60px
        font-size 8px
        color #666666
        z-index 20
        background #fff
        cursor pointer
        border 1px solid #DEDEDE

        li {
            display flex
            flex-direction column
            justify-content flex-start
            align-items center
            width 24px
            height 32px
            padding-top 6px
            list-style none

            img {
                width 10px
                height 10px
                margin-bottom 4px
            }
        }
    }

    >>>.imageRotate {
        transform rotate(-90deg)
        transform-origin 50px 50px
    }
}